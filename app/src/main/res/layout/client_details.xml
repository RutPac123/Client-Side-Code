<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/statustxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:text="Client Name : "
                android:textColor="#2ecc72"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/statustxt"
                android:textColor="#FF3E4D"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/myprojId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/statustxt"
                android:layout_margin="20dp"
                android:fontFamily="sans-serif"
                android:text="Account Number : "
                android:textColor="#3498DB"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mStatus"
                android:layout_margin="20dp"
                android:layout_toRightOf="@+id/myprojId"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mypartyname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/myprojId"
                android:layout_margin="20dp"
                android:fontFamily="sans-serif"
                android:text="Address: "
                android:textColor="#3498DB"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/myCname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/mypartyname"
                android:fontFamily="sans-serif"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/accnotxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mypartyname"
                android:layout_margin="20dp"
                android:text="Email id : "
                android:textColor="#3498DB"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/myaccno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myCname"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/accnotxt"
                android:fontFamily="sans-serif"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/projDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/accnotxt"
                android:layout_margin="20dp"
                android:fontFamily="sans-serif"
                android:text="Phone Number : "
                android:textColor="#3498DB"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/myPDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myaccno"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/projDesc"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mdatetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/myPDesc"
                android:layout_margin="20dp"
                android:text="Studio Name : "
                android:textColor="#3498DB"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/myDateBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myPDesc"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@+id/mdatetxt"
                android:textSize="18sp" />



            <TextView
                android:id="@+id/deldatetxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mdateDel"
                android:layout_marginStart="35dp"
                android:layout_marginTop="-28dp"
                android:layout_toEndOf="@+id/mdateDel"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/deltotxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mdatetxt"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Amount Remaining: "
                android:textColor="#3498DB"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.wang.avi.AVLoadingIndicatorView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:indicatorName="BallSpinFadeLoaderIndicator"
                android:id="@+id/loader"
                android:layout_marginTop="300dp"
                android:layout_centerHorizontal="true"
                app:indicatorColor="#6A89CC"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myDateBook"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:text="â‚¹"
                android:textColor="#000"
                android:layout_toRightOf="@id/deltotxt"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/deliveryto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myDateBook"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:textColor="#000"
                android:layout_toRightOf="@id/deltotxt"
                android:textSize="20sp" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>